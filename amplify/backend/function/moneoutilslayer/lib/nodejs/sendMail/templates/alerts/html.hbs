<!doctype html>
<html>

<head>
    <meta name="viewport" content="width=device-width" />
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <title>Moneo</title>
</head>

<body>
    {{#> layout }}
    <p class='main-text'>Your investment moved {{ chgImpact }} by ₹{{ chgAmount }}({{ chg }}%) since yesterday</p>

    {{#if gainers}}
    <div class="box-container-high">
        <p class='main-text'>Gainers</p>
        <p>{{gainers.length}} Stock in your portfolio are the gainers in today's market session</p>
        {{#each gainers}}
        <div class="data-container">
            <a href="https://moneo.in/get">{{this.name}}</a>
        </div>
        {{/each}}
    </div>
    {{/if}}

    {{#if losers}}
    <div class='box-container-low'>
        <p class='main-text'>Losers</p>
        <p>{{losers.length}} Stock in your portfolio are the losers in today's market session</p>
        {{#each losers}}
        <div class="data-container">
            <a href="https://moneo.in/get">{{this.name}}</a>
        </div>
        {{/each}}
    </div>
    {{/if}}

    {{#if yhigh}}
    <div class="box-container-high">
        <p class='main-text'>52 Week High</p>
        <p>{{yhigh.length}} Stock in your portfolio touched 52 weeks high levels in today's market session</p>
        {{#each yhigh}}
        <div class="data-container">
            <a href="https://moneo.in/get">{{this.name}}</a>
        </div>
        {{/each}}
    </div>
    {{/if}}

    {{#if ylow}}
    <div class='box-container-low'>
        <p class='main-text'>52 Week Low</p>
        <p>{{ylow.length}} Stock in your portfolio touched 52 weeks low levels in today's market session</p>
        {{#each ylow}}
        <div class="data-container">
            <a href="https://moneo.in/get">{{this.name}}</a>
        </div>
        {{/each}}
    </div>
    {{/if}}

    {{#if metal}}
    {{#each metal}}
    <div class="cc-container">
        <div class="column">
            <p class="main-text">{{ this.name }}</p>
        </div>
        <div class="column">
            <p class="main-text">₹{{ this.price }}</p>
        </div>
        <div class="column">
            <p {{#if this.up}} style="color: green" {{else}} style="color: red" {{/if}}>
                {{#if this.up}}
                ▲
                {{else}}
                ▼
                {{/if}}
                {{ this.chg }}%</p>
        </div>
    </div>
    {{/each}}
    {{/if}}

    <table role="presentation" border="0" cellpadding="0" cellspacing="0" class="btn btn-primary">
        <tbody>
            <tr>
                <td align="left">
                    <table role="presentation" border="0" cellpadding="0" cellspacing="0">
                        <tbody>
                            <tr>
                                <td>
                                    <a href="{{url}}" target="_blank">
                                        View Details
                                    </a>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </td>
            </tr>
        </tbody>
    </table>
    {{/layout}}
</body>

</html>