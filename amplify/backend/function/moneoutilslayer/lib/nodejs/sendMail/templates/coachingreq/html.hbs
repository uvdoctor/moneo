<!doctype html>
<html>

<head>
	<meta name="viewport" content="width=device-width" />
	<meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
	<title>Coaching request</title>
</head>

<body>
	{{#> layout templateName="coachingreq" }}

	{{#if owner}}
		<p>User Id: {{user}}</p>
		<p>Email: {{email}}</p>
		<p>Mobile: {{ mob }}</p>
		<p>Duration: {{ duration }}</p>
		<p>Content: {{ text }}</p>
	{{else}}
		<p>Thank you for your coaching request!</p>
		<p>An experienced coach will get back to you shortly.</p>
		<p>Moneo team</p>
	{{/if}}

	{{/layout}}
</body>

</html>